generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model task {
  id          String    @id @default(uuid())
  created_at  DateTime  @default(now()) @db.Timestamptz(6)
  title       String?   @db.VarChar
  description String?
  owner       String?   @db.VarChar
  status      Status?
  priority    Priority?
  due         DateTime? @db.Timestamptz(6)
  createdAt   BigInt    @db.BigInt
}

enum Priority {
  Low
  Medium
  High
}

enum Status {
  Pending
  InProgress
  Completed
  ToDo
  Blocked
}
